<% content_for :meta do %>
 <meta property="fb:app_id" content="928862750534978" />
 <meta property="og:site_name" content="Cao Tan Thanh's Blog"/>
 <meta property="og:title" content="<%= @post.title %>"/>
 <meta property="og:type" content="cttblog:post"/>
 <meta property="og:url" content="http://caotanthanh.info"/>
 <meta property="og:image" content="http://i58.tinypic.com/2vs116c.jpg"/>
 <meta property="og:description" content='<%= @post.content %>' />
<% end %>
<p id="notice"><%= notice %></p>
<div class="blog-list-page">
  <div class="post-item">
    <div class="post-date centerize">
        <%= @post.created_at.strftime("%B %d, %Y") %>
    </div>
    <div class="post-title">
      <%= link_to @post.title, @post,:class => "slabText" %>
    </div>
    <div class="post-content">
      <%=raw @post.content.gsub(/\n/, '<br/>') %>
    </div>
    <ul class="tags">
      <% @post.tags.each do |tag| %>
        <li class="tag <%= tag.color %>"><%= tag.name %></li>
      <% end %>
    </ul>
  </div>
</div>
