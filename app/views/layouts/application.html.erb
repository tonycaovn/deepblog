<!DOCTYPE html>
<html>
<head>
  <title>Deepblog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="blog">
    <div class="header">
        <%= link_to image_tag("avatar.jpg", class: "avatar", alt: "My Avatar"), root_url %>
        <div class="title">
            <%= link_to "Cao Tấn Thành's Blog", root_url %>
        </div>
    </div>
    <%= yield %>
</body>
</html>
